header.site-header
    .container
        .row
            .col-sm-10.col-sm-offset-1
                nav.navbar.navbar-default(role='navigation', ng-controller="NavBarCtrl")
                    .navbar-header
                        button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-collapse-01')
                            span.sr-only Toggle navigation
                            i.fa.fa-navicon.fa-fw
                        a.navbar-brand(ui-sref="homepage")
                            i.fa.fa-support.fa-fw
                            = siteTitle
                    #navbar-collapse-01.collapse.navbar-collapse
                        ul.nav.navbar-nav.pull-right
                            li
                                a(ui-sref="create-posting") Create posting
                            //- li
                                a(ui-sref="your-repos") Your repos
                            li
                                a(ui-sref="your-repos") Your postings
                            li
                                a.ng-cloak(ng-click="doLogIn()", ng-hide="auth.isLoggedIn()") Log in
                            li
                                a.avatar {{ session.getUsername() }}
                                    img.avatar.img-rounded.ng-cloak(ng-src="{{ session.getAvatarUrl() }}", ng-show="session.getAvatarUrl()")
                            li
                                a.ng-cloak(ng-click="doLogOut()", ng-show="auth.isLoggedIn()")
                                    i.fa.fa-sign-out
